<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
    <shape android:shape="rectangle">
        <stroke android:width="1pt"
            android:color="#000000"
            />
        <gradient android:startColor="#32cd32" android:endColor="#ffffff"/>
        <padding android:top="5pt" android:right="5pt" android:left="5pt" android:bottom="5pt"/>
        <corners android:radius="100pt"/>
    </shape>


</item>
    <item >
        <shape android:shape="rectangle">
            <stroke android:width="1pt"
                android:color="#000000"
                />
            <solid android:color="#32cd32"/>
            <padding android:top="5pt" android:right="5pt" android:left="5pt" android:bottom="5pt"/>
            <corners android:radius="2pt"/>
        </shape>


    </item>
</selector>